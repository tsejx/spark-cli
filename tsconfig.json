{
  "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "moduleResolution": "node",
      "outDir": "lib",
      "removeComments": true,
      "types": ["node"],
      "esModuleInterop": true,
      "declaration": true,
      "declarationDir": "./types",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "lib": ["es6","esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
